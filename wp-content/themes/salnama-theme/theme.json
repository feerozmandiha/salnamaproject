{
	"$schema": "https://schemas.wp.org/wp/6.8/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultPalette": false,
			"defaultGradients": false,
            "custom": false,
			"palette": [
				{ "slug": "primary", "color": "#2bace2", "name": "Primary" },
				{ "slug": "primary-hover", "color": "#1a9bcf", "name": "Primary Hover" },
				{ "slug": "background", "color": "#ffffff", "name": "Background" },
				{ "slug": "surface", "color": "#fafafa", "name": "Surface" },
				{ "slug": "text", "color": "#1a1a1a", "name": "Text" },
				{ "slug": "text-secondary", "color": "#666666", "name": "Text Secondary" },
				{ "slug": "border", "color": "#eaeaea", "name": "Border" },
				{ "slug": "success", "color": "#2e7d32", "name": "Success" },
                { "slug": "accent", "color": "#FF6B6B", "name": "Accent/Sale" }
			],
			"gradients": []
		},

		"typography": {
			"lineHeight": true,
			"defaultFontSizes": false,
            "fluid": true,
			"fontFamilies": [
				{
					"fontFamily": "IRANSansXFaNum",
					"name": "IRANSansXFaNum",
					"slug": "iransansxfanum",
					"fontFace": [
						{
							"fontFamily": "IRANSansXFaNum",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": ["file:./assets/fonts/iransansxfanum/iransansxfanum-400-normal.woff2"]
						},
						{
							"fontFamily": "IRANSansXFaNum",
							"fontStyle": "normal",
							"fontWeight": "700",
							"src": ["file:./assets/fonts/iransansxfanum/iransansxfanum-700-normal.woff2"]
						}
					]
				}
			],
			"fontSizes": [
				{ "slug": "small", "size": "0.8125rem", "name": "Small" },
				{ "slug": "medium", "size": "1rem", "name": "Medium" },
				{ "slug": "large", "size": "1.125rem", "name": "Large" },
				{ "slug": "x-large", "size": "1.375rem", "name": "X-Large" },
				{ "slug": "xx-large", "size": "1.75rem", "name": "XX-Large" }
			]
		},

		"spacing": {
			"units": ["%", "px", "em", "rem", "vh", "vw"],
            "margin": true,
            "padding": true,
            "blockGap": true,
			"spacingSizes": [
				{ "slug": "20", "size": "0.25rem" },
				{ "slug": "40", "size": "0.5rem" },
				{ "slug": "60", "size": "1rem" },
				{ "slug": "80", "size": "1.5rem" },
				{ "slug": "120", "size": "2rem" },
				{ "slug": "160", "size": "3rem" },
                { "slug": "240", "size": "4rem" },
                { "slug": "320", "size": "5rem" }
			]
		},

		"shadow": {
			"presets": [
				{ "slug": "soft", "name": "Soft", "shadow": "0 1px 2px rgba(0,0,0,0.05)" },
				{ "slug": "hard", "name": "Hard", "shadow": "0 1px 4px rgba(0,0,0,0.16)" },
				{ "slug": "none", "name": "None", "shadow": "none" }
			]
		},
        "border": {
            "radius": true,
            "style": true,
            "width": true,
            "color": true
        },

		"layout": {
			"contentSize": "1200px",
			"wideSize": "1400px"
		},

		"dimensions": { "minHeight": true },
		"position": { "sticky": true },
        
        "custom": {
            "transition": "0.3s ease-in-out"
        }
	},

	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--text)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--iransansxfanum)",
			"fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--60)",
			"padding": {
				"top": "var(--wp--preset--spacing--120)",
				"bottom": "var(--wp--preset--spacing--120)"
			}
		},

		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"textDecoration": "none"
				},
				
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--primary-hover)"
					},
					"typography": {
						"textDecoration": "underline"
					}
				}
			},
			"heading": {
				"color": {
					"text": "var(--wp--preset--color--text)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--iransansxfanum)",
					"fontWeight": "700"
				}
			},
			"button": {
				"color": {
					"background": "transparent)",
					"text": "var(--wp--preset--color--text)"
				},
				"border": {
					"radius": "0.25rem",
					"width": "1px",
					"style": "solid",
					"color": "var(--wp--preset--color--primary)"

				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--20)",
						"bottom": "var(--wp--preset--spacing--20)",
						"left": "var(--wp--preset--spacing--60)",
						"right": "var(--wp--preset--spacing--60)"
					}
				},
				":hover": {
					"shadow": "var(--wp--preset--shadow--hard)"
				}
			}
		},

		"blocks": {
			"core/group": {
				"color": {
					"background": "var(--wp--preset--color--surface)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--20)",
						"bottom": "var(--wp--preset--spacing--20)",
						"left": "var(--wp--preset--spacing--20)",
						"right": "var(--wp--preset--spacing--20)"
					}
				},
				"shadow": "var(--wp--preset--shadow--soft)"
			},
			"core/cover": {
				"color": {
					"background": "var(--wp--preset--color--surface)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--60)",
						"bottom": "var(--wp--preset--spacing--60)"
					}
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--80)"
					}
				}
			},
			"core/paragraph": {
				"typography": {
					"lineHeight": "1.4"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--40)"
					}
				}
			},
			"core/image": {
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--20)"
					}
				}
			}
		}
	},

	"templateParts": [
		{ "area": "header", "name": "header" },
		{ "area": "footer", "name": "footer" }
	]
}